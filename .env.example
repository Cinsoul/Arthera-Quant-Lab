# Arthera Trading Engine Environment Configuration
# Copy this file to .env and configure your values

# ===========================================
# DATA SOURCE CONFIGURATION  
# ===========================================

# Tushare Pro Token (Optional - for enhanced China market data)
# Get your token at: https://tushare.pro
TUSHARE_TOKEN=

# External Universe Service (Optional)
UNIVERSE_SERVICE_URL=
UNIVERSE_API_KEY=
UNIVERSE_SEARCH_PATH=/search

# Polygon API Key (Optional)
POLYGON_API_KEY=

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL Database
POSTGRES_URL=postgresql://arthera:arthera123@localhost:5432/trading_engine

# Redis Cache
REDIS_URL=redis://localhost:6379

# ===========================================
# SYSTEM CONFIGURATION
# ===========================================

# API Request Timeout (seconds)
REQUEST_TIMEOUT=30

# Stock Pool Configuration Path
POOLS_CONFIG_PATH=config/pools.json

# Demo Mode (true/false)
DEMO_MODE=true

# ===========================================
# SERVICE URLS
# ===========================================

# Quant Engine Service
QUANT_ENGINE_URL=http://localhost:8001
MARKET_DATA_URL=http://localhost:8001

# Quant Lab Service  
QUANT_LAB_URL=http://localhost:8002
STRATEGY_RUNNER_URL=http://localhost:8002

# Paper Trading Service
PAPER_TRADING_URL=http://localhost:8003
RISK_ENGINE_URL=http://localhost:8003

# Portfolio Service
PORTFOLIO_SERVICE_URL=http://localhost:8005
ANALYTICS_SERVICE_URL=http://localhost:8005

# ===========================================
# iOS INTEGRATION
# ===========================================

# iOS WebSocket Port
IOS_WEBSOCKET_PORT=8005

# ===========================================
# DOCKER CONFIGURATION
# ===========================================

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=arthera_trading

# PostgreSQL Password for Docker
POSTGRES_PASSWORD=arthera123
