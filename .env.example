# ================================
# Arthera Trading Engine - Environment Variables
# ================================
# Copy this file to .env and fill in your actual values
# NEVER commit your actual .env file to version control!

# ================================
# Data Source API Keys
# ================================
# Tushare Pro Token (Get from: https://tushare.pro/)
TUSHARE_TOKEN=your_tushare_token_here

# Finnhub API (Get from: https://finnhub.io/)
FINNHUB_API_KEY=your_finnhub_api_key_here

# Alpha Vantage API (Get from: https://www.alphavantage.co/)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# ================================
# AI Model API Keys
# ================================
# DeepSeek AI API (Get from: https://platform.deepseek.com/)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenAI API (Optional - Get from: https://platform.openai.com/)
OPENAI_API_KEY=your_openai_api_key_here

# ================================
# Trading Broker APIs (Optional)
# ================================
# Alpaca Trading API (Get from: https://alpaca.markets/)
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_here

# External data service URL (Optional: For custom data providers)
UNIVERSE_SERVICE_URL=
UNIVERSE_API_KEY=

# ================================
# Database Configuration
# ================================
POSTGRES_URL=postgresql://username:password@localhost:5432/trading_engine
REDIS_URL=redis://localhost:6379

# ==================== Service URLs (Internal - Docker will override these) ====================
QUANT_ENGINE_URL=http://localhost:8001
QUANT_LAB_URL=http://localhost:8002
PAPER_TRADING_URL=http://localhost:8003
DASHBOARD_URL=http://localhost:8004
MARKET_DATA_URL=http://localhost:8001
STRATEGY_RUNNER_URL=http://localhost:8002
RISK_ENGINE_URL=http://localhost:8003
PORTFOLIO_SERVICE_URL=http://localhost:8005
ANALYTICS_SERVICE_URL=http://localhost:8005

# ==================== API Configuration ====================
REQUEST_TIMEOUT=30
HEALTH_TIMEOUT=5
IOS_WEBSOCKET_PORT=8005

# ==================== Data Configuration ====================
POOLS_CONFIG_PATH=config/pools.json
UNIVERSE_SEARCH_PATH=/search

# ==================== System Configuration ====================
DEMO_MODE=true
ENABLE_DASHBOARD_FALLBACKS=1

# ================================
# QuantEngine Integration (Optional)
# ================================
# Path to your QuantEngine installation (if you have it)
QUANT_ENGINE_PATH=/path/to/your/QuantEngine
ML_MODEL_PATH=/path/to/your/MLModelTrainingTool

# ==================== Development Settings ====================
# Set to 'production' for production deployment
ENVIRONMENT=development
LOG_LEVEL=INFO

# ================================
# Security Configuration
# ================================
# Generate strong passwords for production!
SECRET_KEY=your-secret-key-change-in-production
POSTGRES_PASSWORD=change_this_password_in_production
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ================================
# Feature Flags
# ================================
DEMO_MODE=true
ENABLE_REAL_TRADING=false
ENABLE_PAPER_TRADING=true
ENABLE_BACKTESTING=true